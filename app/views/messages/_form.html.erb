<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger" %>
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <form class=horizontal>
        <div class="form-group">
            <label class="col-sm-1 control-label">名前：</label>
            <div class="col-sm-11">
            <%= f.text_field :name, placeholder: "田中太郎", class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">年齢：</label>
            <div class="col-sm-11">
            <%= f.text_field :age, placeholder: "20", class: "col-sm-10 form-control" %>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label", style="margin-top: 5px">内容：</label>
            <div class="col-sm-11">
            <%= f.text_area :body, class: "col-sm-11 input-sm form-control", style: "margin-top: 5px",  placeholder: "投稿内容を入力してください", rows: "10" %>
            </div>
        </div>
        <div class="form-group">
         <%= f.submit class: "btn btn-lg btn-block active" %>
        </div>
    </form>
<% end %>