<div class="panel panel-default">
    <div class="panel-heading">
    メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(Message.new) do |f| %>
    名前：
    <br>
        <%= f.text_field :name, class: "col-sm-12 input-lg", placeholder: "田中太郎" %>
    <br>
    内容：
    <br>
    <%= f.text_area :body, class: "col-sm-12 input-sm", placeholder: "投稿内容を入力してください", rows: "10"   %>
    <br>
    <span class="help-block">名前、内容の両方を入力し、下のボタンを押して投稿してください</span>
    <%= f.submit class: "btn btn-lg btn-block active" %>
<% end %>