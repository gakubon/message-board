<div class="panel panel-default">
    <div class="panel-heading">
    メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
    <div class="col-sm-1">名前：</div>
        <%= f.text_field :name, placeholder: "田中太郎", class: "col-sm-11" %>
    <div class="col-sm-1", style="margin-top: 5px">内容：</div>
    <%= f.text_area :body, class: "col-sm-11 input-sm", style: "margin-top: 5px",  placeholder: "投稿内容を入力してください", rows: "10" %>
    <%= f.submit class: "btn btn-lg btn-block active" %>
<% end %>