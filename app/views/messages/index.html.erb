<div class="panel panel-default">
    <div class="panel-heading">
    メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
    <label for="name" class="col-sm-1 control-label">名前：</label>
        <%= f.text_field :name, class: "col-sm-11 input-lg", placeholder: "田中太郎" %>
    <br>
    <label for="message" class="col-sm-1 control-label", style="margin-top: 5px">内容：</label>
    <%= f.text_area :body, class: "col-sm-11 input-sm", style: "margin-top: 5px",  placeholder: "投稿内容を入力してください", rows: "10"   %>
    <br>
    <span class="help-block", style="margin-top: 30px">名前、内容の両方を入力し、下のボタンを押して投稿してください</span>
    <%= f.submit class: "btn btn-lg btn-block active" %>
<% end %>